<div class="container">
    <div class="col-sm-12 login-form">
        <div class="login-text">
            <h2>Log in</h2>
        </div>
        <form id="login-form">
            <div class="form-group">
                <label for="name">Username:</label>
                <input class="col-sm-12 form-input" type="text" id="username-login" />
            </div>
            <div class="form-group">
                <label for="password-login">Password:</label>
                <input class="col-sm-12 form-input" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="col-sm-12 btn btn-primary" type="submit">Log in</button>
            </div>
            <a class="nav-link text-center" href="/signup">Sign up</a>
        </form>
    </div>
</div>

<script src="../public/javascript/login.js"></script>