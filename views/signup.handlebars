<div class="container">
    <div class="row">
        <div class="col-sm-12 sign-up-form">
            <h2>Sign up</h2>
            <br>
            <form id="signup-form">
                <div class="form-group">
                    <label for="name">Username:</label>
                    <input class="col-sm-12 form-input" type="text" id="username-signup" />
                </div>
                <div class="form-group">
                    <label for="password-signup">Password:</label>
                    <input class="col-sm-12 form-input" type="password" id="password-signup" />
                </div>
                <div class="form-group">
                    <button class="col-sm-12 btn btn-primary" type="submit">Sign up</button>
                </div>
                <a class="nav-link text-center" href="/login"> If you already have an account, click here to log in</a>
            </form>
        </div>
    </div>
</div>

<script src="./javascript/signup.js"></script>